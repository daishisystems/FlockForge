<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlockForge.Pages.FontDiagnosticsPage"
             Title="Font Diagnostics">
  <Grid Style="{StaticResource GF.Grid}">
    <VerticalStackLayout Spacing="{DynamicResource GF.Spacing}">
      <Label Text="OpenSans Regular sample — The quick brown fox 123"
             FontFamily="OpenSansRegular" FontSize="18"
             Style="{StaticResource GF.LabelBase}" />
      <Label Text="OpenSans Semibold sample — The quick brown fox 123"
             FontFamily="OpenSansSemibold" FontSize="18"
             Style="{StaticResource GF.LabelBase}" />
    </VerticalStackLayout>
  </Grid>
</ContentPage>
