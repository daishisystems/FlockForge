<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!-- Layout -->
  <Thickness x:Key="GF.Padding">16,16,16,16</Thickness>
  <Thickness x:Key="GF.Margin">8,8,8,8</Thickness>
  <x:Double x:Key="GF.Spacing">8</x:Double>

  <!-- Sizes -->
  <x:Double x:Key="GF.HeightRequest">44</x:Double>
  <x:Double x:Key="GF.MinHeightRequest">44</x:Double>
  <x:Double x:Key="GF.WidthRequest">120</x:Double>
  <x:Double x:Key="GF.FontSize">14</x:Double>

  <!-- Corners (pick the exact one per target property) -->
  <x:Int32  x:Key="GF.Corner.Button">16</x:Int32>
  <x:Single x:Key="GF.Corner.Frame">16</x:Single>
  <CornerRadius x:Key="GF.Corner.Border">16</CornerRadius>
</ResourceDictionary>
