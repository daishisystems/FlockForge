<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Transparent splash theme that shows no splash screen -->
    <style name="Maui.SplashTheme.NoSplash" parent="Maui.SplashTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    
    <!-- App splash theme -->
    <style name="AppSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Main theme -->
    <style name="MainTheme" parent="Maui.MainTheme">
        <!-- Add any customizations for the main theme here -->
    </style>
    
    <!-- MaterialButton style -->
    <style name="Widget.MyApp.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/Shape.MyApp.RoundedCorners</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
    </style>
    
    <!-- Rounded corners shape appearance -->
    <style name="Shape.MyApp.RoundedCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>