<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FlockForge"
             x:Class="FlockForge.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DesignSystem.xaml" />
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/GloveFirst.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Optional font aliases (safe even without files) -->
            <x:String x:Key="FFont.Regular">InterRegular</x:String>
            <x:String x:Key="FFont.Semibold">InterSemibold</x:String>
            <x:String x:Key="FFont.Bold">InterBold</x:String>

            <!-- Optional system fallback names (not used by default) -->
            <OnPlatform x:Key="FFont.SystemPrimary" x:TypeArguments="x:String">
                <On Platform="iOS"     Value="SF Pro" />
                <On Platform="Android" Value="Roboto" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>

